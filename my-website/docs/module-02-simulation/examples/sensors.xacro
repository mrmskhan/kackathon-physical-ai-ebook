<?xml version="1.0"?>
<!--
  Sensor Configuration for Humanoid Robot
  
  Includes:
  - Lidar sensor (360-degree 2D scan)
  - RGB camera
  - IMU (Inertial Measurement Unit)
  
  Usage: Include in your robot's URDF/xacro file
  <xacro:include filename="sensors.xacro"/>
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Lidar Sensor Macro -->
  <xacro:macro name="lidar_sensor" params="parent *origin">
    <joint name="lidar_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="lidar_link"/>
    </joint>

    <link name="lidar_link">
      <visual>
        <geometry>
          <cylinder radius="0.05" length="0.04"/>
        </geometry>
        <material name="lidar_material">
          <color rgba="0.0 0.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.05" length="0.04"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <gazebo reference="lidar_link">
      <sensor name="lidar" type="gpu_lidar">
        <topic>/lidar</topic>
        <update_rate>10</update_rate>
        <lidar>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>10.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </lidar>
        <always_on>1</always_on>
        <visualize>true</visualize>
      </sensor>
    </gazebo>
  </xacro:macro>

  <!-- Camera Sensor Macro -->
  <xacro:macro name="camera_sensor" params="parent *origin">
    <joint name="camera_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="camera_link"/>
    </joint>

    <link name="camera_link">
      <visual>
        <geometry>
          <box size="0.03 0.08 0.03"/>
        </geometry>
        <material name="camera_material">
          <color rgba="0.2 0.2 0.2 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.03 0.08 0.03"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <gazebo reference="camera_link">
      <sensor name="camera" type="camera">
        <topic>/camera/image</topic>
        <update_rate>30</update_rate>
        <camera>
          <horizontal_fov>1.396</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.007</stddev>
          </noise>
        </camera>
        <always_on>1</always_on>
        <visualize>true</visualize>
      </sensor>
    </gazebo>
  </xacro:macro>

  <!-- IMU Sensor Macro -->
  <xacro:macro name="imu_sensor" params="parent *origin">
    <joint name="imu_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="imu_link"/>
    </joint>

    <link name="imu_link">
      <visual>
        <geometry>
          <box size="0.02 0.02 0.01"/>
        </geometry>
        <material name="imu_material">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.02 0.02 0.01"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.01"/>
        <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
      </inertial>
    </link>

    <gazebo reference="imu_link">
      <sensor name="imu" type="imu">
        <topic>/imu</topic>
        <update_rate>100</update_rate>
        <imu>
          <angular_velocity>
            <x>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.01</stddev>
              </noise>
            </x>
            <y>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.01</stddev>
              </noise>
            </y>
            <z>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.01</stddev>
              </noise>
            </z>
          </angular_velocity>
          <linear_acceleration>
            <x>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.1</stddev>
              </noise>
            </x>
            <y>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.1</stddev>
              </noise>
            </y>
            <z>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.1</stddev>
              </noise>
            </z>
          </linear_acceleration>
        </imu>
        <always_on>1</always_on>
      </sensor>
    </gazebo>
  </xacro:macro>

  <!-- Example usage in your robot URDF:
  
  <xacro:include filename="sensors.xacro"/>
  
  <xacro:lidar_sensor parent="torso_link">
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
  </xacro:lidar_sensor>
  
  <xacro:camera_sensor parent="head_link">
    <origin xyz="0.1 0 0.05" rpy="0 0 0"/>
  </xacro:camera_sensor>
  
  <xacro:imu_sensor parent="torso_link">
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
  </xacro:imu_sensor>
  
  -->

</robot>
